<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.jukisawa.mangaarchive.ui.controller.MangaPopupController"
            prefWidth="1400" prefHeight="300"
            style="-fx-background-color: #2b2b2b; -fx-padding: 15; -fx-background-radius: 10;">

    <center>
        <VBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="nameField" promptText="Name" />
            <TextField fx:id="locationField" promptText="Location" />
            <CheckBox fx:id="completedCb" text="Abgeschlossen"/>
            <CheckBox fx:id="abortedCb" text="Abgebrochen"/>
            <Label text="Genre auswÃ¤hlen:"
                   style="-fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;" />
            <TilePane fx:id="genreContainer" hgap="10" vgap="10" prefColumns="10"
                      tileAlignment="TOP_LEFT" />
            <TextField fx:id="ratingField" promptText="Bewertung (1-10)" />
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <Button text="Abbrechen" onAction="#onCancel"
                    style="-fx-background-color: #444; -fx-text-fill: white;" />
            <Button text="Speichern" onAction="#onSave"
                    style="-fx-background-color: #3a6ea5; -fx-text-fill: white;" />
        </HBox>
    </bottom>

</BorderPane>